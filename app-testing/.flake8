[flake8]

# max cyclomatic complexity
max-complexity = 9

extend-ignore =
    # ignore E203 because black might reformat it
    E203,
    # do not require type annotations for self nor cls
    ANN101,
    ANN102

noqa-require-code = true

per-file-ignores =
    src/driver/drag_drop.py:E501,
    locators.py:F401
