{
  "$schema": "http://json-schema.org/draft-07/schema",

  "definitions": {
    "positiveNumber": {
      "type": "number",
      "minimum": 0
    },
    "displayCategory": {
      "type": "string",
      "enum": ["GEN1"]
    },
    "valuesByApiLevel": {
      "type": "object",
      "required": ["3.0"],
      "additionalProperties": false,
      "patternProperties": {
        "^\\d\\.\\d+$": {
          "$ref": "#/definitions/positiveNumber"
        }
      }
    },
    "configValue": {
      "type": "object",
      "required": ["value", "min", "max", "valuesByApiLevel"],
      "properties": {
        "value": {
          "$ref": "#/definitions/positiveNumber",
          "$comment": "This key is deprecated in favor of valuesByApiLevel"
        },
        "min": { "$ref": "#/definitions/positiveNumber" },
        "max": { "$ref": "#/definitions/positiveNumber" },
        "valuesByApiLevel": { "$ref": "#/definitions/valuesByApiLevel" }
      }
    }
  },

  "description": "Model-level gripper specifications. These do not vary across different versions of the same model",
  "type": "object",
  "$comment": "Example key: 'gripper'",
  "patternProperties": {
    ".*": {
      "type": "object",
      "required": ["displayName"],
      "additionalProperties": false,
      "properties": {
        "displayName": { "type": "string" },
        "displayCategory": { "$ref": "#/definitions/displayCategory" }
      }
    }
  }
}
