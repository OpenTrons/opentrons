{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "definitions": {
    "positiveNumber": {
      "type": "number",
      "minimum": 0
    },
    "channels": {
      "enum": [1, 8]
    }
  },

  "description": "Model-level pipette specifications. These do not vary across different versions of the same model",
  "type": "object",
  "$comment": "Example key: 'p10_single'",
  "patternProperties": {
    ".*": {
      "type": "object",
      "required": [
        "channels",
        "displayName",
        "defaultAspirateFlowRate",
        "defaultDispenseFlowRate",
        "maxVolume",
        "minVolume"
      ],
      "additionalProperties": false,
      "properties": {
        "channels": {"value": {"$ref": "#/definitions/channels"}, "edit": {"type": "boolean"}},
        "defaultAspirateFlowRate": {"value": {"$ref": "#/definitions/positiveNumber"}, "edit": {"type": "boolean"}},
        "defaultDispenseFlowRate": {"value": {"$ref": "#/definitions/positiveNumber"}, "edit": {"type": "boolean"}},
        "displayName": {"value": {"type": "string"}, "edit": {"type": "boolean"}},
        "maxVolume": {"value": {"$ref": "#/definitions/positiveNumber"}, "edit": {"type": "boolean"}},
        "minVolume": {"value": {"$ref": "#/definitions/positiveNumber"}, "edit": {"type": "boolean"}}
      }
    }
  }
}
